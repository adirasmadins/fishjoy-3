// ++++ COMMON FUNCTION ++++++
function resize(w, h){
    var widthRatio = w/screen_width;
    var heightRatio = h /screen_height;
    var refRatio = 1;

    if (widthRatio > heightRatio) {
        refRatio = 1/heightRatio;
    }else if(widthRatio < heightRatio){
        refRatio = 1/widthRatio;
    }else{
        refRatio = 1/widthRatio;
    }

    return refRatio;
}