function changeCannonSize(value){
    var _size = cannonSize + value*1;
    if(_size > maxCannonSize){
        cannonSize = maxCannonSize;
    }else if(_size <= 1){
        cannonSize = 1;
    }else{
        cannonSize = _size;
    }

    activeCannon.changeCannonSize(cannonSize);
}

